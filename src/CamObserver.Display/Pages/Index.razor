@page "/"
<h1>Cam Observer v0.1</h1>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Jenis</th>
            <th scope="col">Jumlah</th>
        </tr>
    </thead>
    <tbody>
        @if (AppConstants.InfoStat != null)
        {
            var datatmp = AppConstants.InfoStat.ToArray();
            foreach(var item in datatmp)
            {
                 <tr>
                    <th scope="row">@item.No</th>
                    <td>@item.Objek</td>
                    <td>@item.Jumlah.ToString("n0")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Tidak ada data</td>
            </tr>
        }       

    </tbody>
</table>

@code{
    BlazorTimer timer;
    protected override void OnInitialized()
    {
        timer = new();
        timer.SetTimer(1000);
        timer.OnElapsed += async() => { await InvokeAsync(StateHasChanged); };
    }

}